---
- name: uninstall httpd
  hosts: web
  become: yes
  
  vars:
  ansible_become_pass: "vagrant"
  
  tasks:
    - name: stopping httpd
      ansible.builtin.service:
        name: httpd
        state: stopped
        
    - name: remove index.html
      file:
        path: /var/www/html/index.html
        state: absent
        
     - name: uninstall httpd
       ansible.builtin.service:
         name: httpd
         state: stopped
         
 ...
